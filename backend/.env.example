# Application
APP_NAME=bio-rag
APP_ENV=development
DEBUG=true

# Database
# Local: postgresql+asyncpg://bio_rag:password@localhost:5432/bio_rag
# Docker: postgresql+asyncpg://bio_rag:password@postgres:5432/bio_rag
DATABASE_URL=postgresql+asyncpg://bio_rag:password@localhost:5432/bio_rag

# Redis
# Local: redis://localhost:6379/0
# Docker: redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0

# Qdrant Vector Database
# Local: localhost / Docker: qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# External APIs (Required)
PUBMED_API_KEY=your_pubmed_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional APIs
COHERE_API_KEY=your_cohere_api_key_here  # For reranking (optional)

# Security (Generate a new secret key for production)
# python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:3002"]

# Celery
# Local: redis://localhost:6379/1
# Docker: redis://redis:6379/1
CELERY_BROKER_URL=redis://localhost:6379/1
